<?xml version="1.0" encoding="utf-8"?>
<com.github.tibolte.agendacalendarview.agenda.AgendaEventView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <!-- Description -->
    <LinearLayout
        android:id="@+id/view_agenda_event"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/appointmentCompleted"
        android:padding="10dp">

        <TextView
            android:id="@+id/view_agenda_event_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="@android:color/black"
            android:textSize="16dp"/>

        <TextView
            android:id="@+id/view_agenda_event_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:textColor="@color/gray_very_deep"
            android:textSize="14dp"/>

        <TextView
            android:id="@+id/view_agenda_event_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/gray_very_deep"
            android:text="Completed"
            android:textSize="14dp"/>

    </LinearLayout>

</com.github.tibolte.agendacalendarview.agenda.AgendaEventView>