<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            style="@style/MainCard"
            android:id="@+id/card_main_1_1"
            android:backgroundTint="@color/teal_blue">

            <RelativeLayout
                android:id="@+id/rv1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    style="@style/MainCardTitle"
                    android:id="@+id/tv_card_main_1_title"
                    android:text="Profile"/>

                <TextView
                    style="@style/MainCardSubtitle"
                    android:id="@+id/tv_card_main1_subtitle"
                    android:layout_below="@id/tv_card_main_1_title"
                    android:text="Access your treatments and anamnesis"/>

                <ImageView
                    style="@style/MainCardImage"
                    android:id="@+id/imageView2"
                    android:layout_alignBottom="@+id/tv_card_main_1_title"
                    android:layout_alignStart="@+id/tv_card_main1_subtitle"
                    android:layout_alignTop="@+id/tv_card_main_1_title"
                    app:srcCompat="@drawable/ic_account_circle_white_48dp" />

            </RelativeLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            style="@style/MainCard"
            android:id="@+id/card_main_1_2"
            android:backgroundTint="@color/dark_slate_gray">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    style="@style/MainCardTitle"
                    android:id="@+id/tv_card_main_2_title"
                    android:text="Appointments" />

                <TextView
                    style="@style/MainCardSubtitle"
                    android:id="@+id/tv_card_main2_subtitle"
                    android:layout_below="@id/tv_card_main_2_title"
                    android:text="Access your treatments and anamnesis" />

                <ImageView
                    style="@style/MainCardImage"
                    android:id="@+id/imageView3"
                    android:layout_alignBottom="@+id/tv_card_main_2_title"
                    android:layout_alignStart="@+id/tv_card_main2_subtitle"
                    android:layout_alignTop="@+id/tv_card_main_2_title"
                    app:srcCompat="@drawable/ic_today_white_48dp" />

            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            style="@style/MainCard"
            android:id="@+id/card_main_3_1"
            android:backgroundTint="@color/gunmetal">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    style="@style/MainCardTitle"
                    android:id="@+id/tv_card_main_3_title"
                    android:text="Treatments"/>

                <TextView
                    style="@style/MainCardSubtitle"
                    android:id="@+id/tv_card_main3_subtitle"
                    android:layout_below="@id/tv_card_main_3_title"
                    android:text="Access your treatments and anamnesis" />

                <ImageView
                    style="@style/MainCardImage"
                    android:id="@+id/imageView4"
                    android:layout_alignBottom="@+id/tv_card_main_3_title"
                    android:layout_alignStart="@+id/tv_card_main3_subtitle"
                    android:layout_alignTop="@+id/tv_card_main_3_title"
                    app:srcCompat="@drawable/ic_receipt_white_48dp" />

            </RelativeLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            style="@style/MainCard"
            android:id="@+id/card_main_4_1"
            android:backgroundTint="@color/saffron">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    style="@style/MainCardTitle"
                    android:id="@+id/tv_card_main_4_title"
                    android:text="Our services"/>

                <TextView
                    style="@style/MainCardSubtitle"
                    android:id="@+id/tv_card_main4_subtitle"
                    android:layout_below="@id/tv_card_main_4_title"
                    android:text="Access your treatments and anamnesis" />

                <ImageView
                    style="@style/MainCardImage"
                    android:id="@+id/imageView5"
                    android:layout_alignBottom="@+id/tv_card_main_4_title"
                    android:layout_alignStart="@+id/tv_card_main4_subtitle"
                    android:layout_alignTop="@+id/tv_card_main_4_title"
                    app:srcCompat="@drawable/ic_dashboard_white_48dp" />

            </RelativeLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            style="@style/MainCard"
            android:id="@+id/card_main_5_1"
            android:backgroundTint="@color/giants_orange_light"
            android:layout_marginBottom="@dimen/main_card_margin_vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    style="@style/MainCardTitle"
                    android:id="@+id/tv_card_main_5_title"
                    android:text="Clinic info" />

                <TextView
                    style="@style/MainCardSubtitle"
                    android:id="@+id/tv_card_main5_subtitle"
                    android:layout_below="@id/tv_card_main_5_title"
                    android:text="Access your treatments and anamnesis" />

                <Button
                    android:id="@+id/btn_card_main5_action1"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_card_main5_subtitle"
                    android:layout_margin="@dimen/card_button_margin"
                    android:text="go to info page"
                    android:textColor="@color/anti_flash_white" />

                <ImageView
                    style="@style/MainCardImage"
                    android:id="@+id/imageView6"
                    android:layout_alignBottom="@+id/tv_card_main_5_title"
                    android:layout_alignStart="@+id/tv_card_main5_subtitle"
                    android:layout_alignTop="@+id/tv_card_main_5_title"
                    app:srcCompat="@drawable/ic_info_outline_white_48dp" />

            </RelativeLayout>

        </android.support.v7.widget.CardView>

    </LinearLayout>

</android.support.v4.widget.NestedScrollView>