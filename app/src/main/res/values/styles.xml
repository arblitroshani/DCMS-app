<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="coordinatorLayoutStyle">@style/Widget.Design.CoordinatorLayout</item>
        <item name="cardViewStyle">@style/CardView</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- Text -->
    <style name="Body1" parent="TextAppearance.AppCompat.Body1">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="Body2" parent="TextAppearance.AppCompat.Body2">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="Body1.White" />

    <style name="Body2.White" />

    <style name="Body2.Black" />

    <style name="Body1.White.Primary">
        <item name="android:textColor">@color/text_white_primary</item>
    </style>

    <style name="Body2.White.Primary">
        <item name="android:textColor">@color/text_white_primary</item>
    </style>

    <!-- My Themes -->
    <style name="MainCard">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/main_card_margin_horizontal</item>
        <item name="android:layout_marginEnd">@dimen/main_card_margin_horizontal</item>
        <item name="android:layout_marginTop">@dimen/main_card_margin_vertical</item>
        <item name="android:background">?android:attr/selectableItemBackgroundBorderless</item>
        <item name="cardCornerRadius">@dimen/card_recycler_corner_radius</item>
        <item name="cardElevation">@dimen/card_recycler_elevation</item>
    </style>

    <style name="MainCardTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentStart">true</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_marginStart">@dimen/card_main_title_margin_start</item>
        <item name="android:layout_marginTop">@dimen/card_title_margin_top</item>
        <item name="android:fontFamily">sans-serif-thin</item>
        <item name="android:textColor">@color/anti_flash_white</item>
        <item name="android:textSize">@dimen/card_main_title</item>
    </style>

    <style name="MainCardSubtitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginEnd">@dimen/card_subtitle_margin</item>
        <item name="android:layout_marginBottom">@dimen/card_subtitle_margin</item>
        <item name="android:layout_marginStart">@dimen/card_main_subtitle_margin_start</item>
        <item name="android:layout_marginTop">@dimen/card_button_margin</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textColor">@color/anti_flash_white</item>
    </style>

    <style name="MainCardImage">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/card_main_icon_margin_start</item>
        <item name="android:layout_marginTop">@dimen/card_main_icon_margin_top</item>
    </style>

</resources>
